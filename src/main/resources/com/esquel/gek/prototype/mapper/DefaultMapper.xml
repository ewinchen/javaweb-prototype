<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.esquel.gek.prototype.mapper.DefaultMapper">
    <select id="selectUserById" resultType="Users">
        select * from users WITH (TABLOCKX) where id = #{id}
    </select>

    <select id="selectCity" resultType="java.util.HashMap">
        select * from city  limit 1 offset 10 for update
    </select>
</mapper>